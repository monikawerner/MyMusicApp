<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:minHeight="@dimen/list_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/song_image"
        android:layout_width="@dimen/list_item_height"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/thunder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/list_item_paddingLeft">

        <TextView
            android:id="@+id/song"
            style="@style/listItemTextView"
            android:gravity="bottom"
            android:textSize="@dimen/name_text_size"
            android:textStyle="bold"
            tools:text="Thunder" />

        <TextView
            android:id="@+id/artist"
            style="@style/listItemTextView"
            android:gravity="top"
            android:textSize="@dimen/song_text_size"
            tools:text="Imagine Dragons" />

    </LinearLayout>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_item_icon_height"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:src="@drawable/note" />

</LinearLayout>
