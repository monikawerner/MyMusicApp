<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.android.mymusicapp.ArtistDescriptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/artist_name_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/description_image_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artist_name_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/description_name_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/name_text_size"
                android:textStyle="bold"
                tools:text="@string/imagine_dragons" />

            <ImageView
                android:id="@+id/artist_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/description_image_height"
                android:padding="@dimen/description_image_padding"
                tools:src="@drawable/imagine_dragons" />

        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/description_padding"
            tools:text="@string/imagine_dragons_description" />

        <LinearLayout
            android:id="@+id/buttons"
            style="@style/buttons"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/library"
                style="@style/button"
                android:text="Library" />

            <TextView
                android:id="@+id/artists"
                style="@style/button"
                android:text="Artists" />

            <TextView
                android:id="@+id/play_the_music"
                style="@style/button"
                android:text="Play the music" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
